<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="400dp"
    android:minWidth="400dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành viên tham gia">

        </TextView>
        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnThemThanhVien"
            android:backgroundTint="#3F51B5"
            android:minHeight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm thành viên">
        </Button>
        <TextView
            android:id="@+id/tvSoLuongThanhVien"
            android:textSize="25dp"
            android:text="Chưa có thành viên tham gia"
            android:textColor="#F44336"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/dialog_recyclerView"
        android:layout_width="match_parent"
        tools:listitem="@layout/list_thanhvien_item"
        android:layout_height="wrap_content" />

</LinearLayout>
